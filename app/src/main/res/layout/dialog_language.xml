<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:padding="@dimen/d_15dp">

    <RelativeLayout
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_round">

        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/d_15dp"
               android:text="@string/s_language"
               android:textSize="@dimen/text_size_20"
               android:fontFamily="@font/comfortaa_bold"
               android:gravity="center"
               android:textColor="@color/c_blue"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="@dimen/d_30dp"
            android:layout_height="@dimen/d_30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/d_5dp"
            android:src="@drawable/ic_cancel_gray"/>

        <TextView
            android:id="@+id/tv_dialog_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_layout"
            android:gravity="center"
            android:visibility="gone"
            android:padding="25dp"
            android:textSize="14sp"
            android:text="1004"
            android:textColor="@color/c_light_gray"
            android:fontFamily="@font/nunitosans_regular"
            />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dialog_message"
            android:layout_margin="@dimen/d_20dp"
            android:id="@+id/radioGroup_lang">


            <RadioButton
                android:id="@+id/rd_english"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="English"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_gray_text"
                android:layout_margin="@dimen/d_5dp"
                android:checked="true"
                android:textSize="@dimen/text_size_18" />
            <RadioButton
                android:id="@+id/rd_russian"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Russian"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_gray_text"
                android:layout_margin="@dimen/d_5dp"
                android:checked="false"
                android:visibility="visible"
                android:textSize="@dimen/text_size_18" />
            <RadioButton
                android:id="@+id/rd_polish"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Polish"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_gray_text"
                android:layout_margin="@dimen/d_5dp"
                android:visibility="visible"
                android:checked="false"
                android:textSize="@dimen/text_size_18" />
            <RadioButton
                android:id="@+id/rd_czech"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Czech"
                android:visibility="visible"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_gray_text"
                android:layout_margin="@dimen/d_5dp"
                android:checked="false"
                android:textSize="@dimen/text_size_18" />
            <RadioButton
                android:id="@+id/rd_korean"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Korean"
                android:visibility="visible"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_gray_text"
                android:layout_margin="@dimen/d_5dp"
                android:checked="false"
                android:textSize="@dimen/text_size_18" />
            <RadioButton
                android:id="@+id/rd_thai"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Thai"
                android:visibility="visible"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_gray_text"
                android:layout_margin="@dimen/d_5dp"
                android:checked="false"
                android:textSize="@dimen/text_size_18" />
            <RadioButton
                android:id="@+id/rd_dutch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Dutch"
                android:visibility="visible"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_gray_text"
                android:layout_margin="@dimen/d_5dp"
                android:checked="false"
                android:textSize="@dimen/text_size_18" />
            <RadioButton
                android:id="@+id/rd_german"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="German"
                android:visibility="visible"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_gray_text"
                android:layout_margin="@dimen/d_5dp"
                android:checked="false"
                android:textSize="@dimen/text_size_18" />
            <RadioButton
                android:id="@+id/rd_spanish"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Spanish"
                android:visibility="visible"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_gray_text"
                android:layout_margin="@dimen/d_5dp"
                android:checked="false"
                android:textSize="@dimen/text_size_18" />

        </RadioGroup>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/d_10dp"
            android:visibility="gone"
            android:layout_below="@+id/radioGroup_lang"
            android:background="@color/c_blue" />

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_marginLeft="@dimen/d_20dp"
            android:layout_marginRight="@dimen/d_20dp"
            android:layout_marginBottom="@dimen/d_2dp"
            android:visibility="visible"
            android:gravity="center"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:background="@drawable/tv_shape_blue_border"
                android:gravity="center"
                android:padding="@dimen/d_10dp"
                android:layout_margin="@dimen/d_10dp"
                android:text="@string/text_no"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                />


            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/c_blue" />

            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:background="@drawable/tv_shape_blue_border"
                android:gravity="center"
                android:padding="@dimen/d_10dp"
                android:text="@string/text_yes"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>