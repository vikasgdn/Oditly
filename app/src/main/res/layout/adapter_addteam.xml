<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/d_10dp"
        android:layout_marginLeft="@dimen/d_10dp"
        android:weightSum="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_5dp"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/cb_select"
                    android:layout_width="@dimen/d_35dp"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/c_blue"
                    android:checked="false"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:gravity="left"
                    android:paddingLeft="@dimen/d_2dp"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:maxLines="1"
                    android:textColor="@color/c_dark_gray"
                    android:textSize="@dimen/text_size_16"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_35dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email : "
                    android:gravity="left"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:paddingLeft="@dimen/d_2dp"
                    android:textColor="@color/c_gray_text"
                    android:textSize="@dimen/text_size_16"/>
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:maxLines="1"
                    android:gravity="left"
                    android:fontFamily="@font/nunitosans_regular"
                    android:paddingLeft="@dimen/d_2dp"
                    android:textColor="@color/c_gray_text"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_35dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role  : "
                    android:gravity="left"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:padding="@dimen/d_2dp"
                    android:textColor="@color/c_gray_text"
                    android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/tv_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Role"
                android:gravity="left"
                android:fontFamily="@font/nunitosans_regular"
                android:padding="@dimen/d_2dp"
                android:textColor="@color/c_gray_text"
                android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/view_devider"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="@dimen/size_2dp"
        android:layout_below="@+id/ll_parent"
        android:background="@color/c_light_gray"/>

</RelativeLayout>