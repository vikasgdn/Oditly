<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_white">
    <ImageView
        android:id="@+id/iv_header_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d_10dp"
        android:visibility="visible"
        android:src="@drawable/ic_arrow" />

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d_5dp"
        android:layout_toLeftOf="@+id/iv_header_right"
        android:layout_toRightOf="@id/iv_header_left"
        android:ellipsize="marquee"
        android:fontFamily="@font/nunitosans_semibold"
        android:gravity="center"
        android:paddingLeft="@dimen/d_10dp"
        android:paddingRight="@dimen/d_10dp"
        android:singleLine="true"
        android:text="Oditly"
        android:textColor="@color/c_blue"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/iv_header_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/d_10dp"
        android:visibility="invisible"
        android:src="@drawable/ic_notifications" />


</RelativeLayout>