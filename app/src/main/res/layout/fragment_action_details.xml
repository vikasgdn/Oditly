<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    >

    <LinearLayout
        android:id="@+id/ll_parentdata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@color/c_white"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_white"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_action_title"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_title"
                    android:textColor="@color/c_gray_text"
                    android:theme="@style/TextViewaudit_details"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:background="#e0e0e0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_correctiveaction"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_details"
                    android:textColor="@color/c_gray_text"
                    android:theme="@style/TextViewaudit_details"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:background="#e0e0e0"/>

                <TextView
                    android:id="@+id/tv_actionplan_attachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_actionplan_attachment"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_imagelist_actionplan"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_marginHorizontal="@dimen/d_5dp"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/image_list_layout_actiondetails" />

                    <TextView
                        android:id="@+id/tv_actionplan_attachment_notfount"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:text="@string/text_no_attachment"
                        android:textColor="@color/c_gray_text"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_16"
                        android:visibility="gone"
                        android:fontFamily="@font/nunitosans_bold"
                        />

                </RelativeLayout>

                <View
                    android:id="@+id/div_question"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:background="#e0e0e0"/>

                <TextView
                    android:id="@+id/tv_question_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_question"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_question_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_question"
                    android:maxLines="2"
                    android:textColor="@color/c_gray_text"
                    android:theme="@style/TextViewaudit_details"
                    />

                <View
                    android:id="@+id/div_answer"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:background="#e0e0e0"/>

                <TextView
                    android:id="@+id/tv_answer_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_response"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_answer"
                    android:textColor="@color/c_gray_text"
                    android:theme="@style/TextViewaudit_details"
                    />

                <View
                    android:id="@+id/div_comment"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:background="#e0e0e0"/>

                <TextView
                    android:id="@+id/tv_comment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_comment"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_comment"
                    android:maxLines="2"
                    android:textColor="@color/c_gray_text"
                    android:theme="@style/TextViewaudit_details"
                    />

                <View
                    android:id="@+id/div_inspection_file"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:background="#e0e0e0"/>

                <TextView
                    android:id="@+id/tv_inspection_attachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_inspection_attachment"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />

                <RelativeLayout
                    android:id="@+id/rl_quetionimage"
                    android:layout_width="match_parent"
                    android:layout_height="110dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_imagelist_inspection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/d_5dp"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/image_list_layout_actiondetails" />
                    <TextView
                        android:id="@+id/tv_inspection_attachment_notfount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/text_no_attachment"
                        android:textColor="@color/c_gray_text"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_16"
                        android:visibility="gone"
                        android:fontFamily="@font/nunitosans_bold"
                        />

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:background="#e0e0e0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_audit_id"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_auditid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_action"
                    android:textColor="@color/c_gray_text"
                    android:theme="@style/TextViewaudit_details"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:background="#e0e0e0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_actiopnplan_id"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_action_plan_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_actiopnplan_id"
                    android:textColor="@color/c_gray_text"
                    android:theme="@style/TextViewaudit_details"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:background="#e0e0e0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_duedate"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_duedate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_duedate"
                    android:textColor="@color/c_gray_text"
                    android:theme="@style/TextViewaudit_details"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:background="#e0e0e0"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_assignee"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_assignee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_assignedto"
                    android:textColor="@color/c_gray_text"
                    android:theme="@style/TextViewaudit_details"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:background="#e0e0e0"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_assignedby"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_assigned_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_assignedto"
                    android:textColor="@color/c_gray_text"
                    android:theme="@style/TextViewaudit_details"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:background="#e0e0e0"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_location"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_location"
                    android:textColor="@color/c_gray_text"
                    android:theme="@style/TextViewaudit_details"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:visibility="gone"
                    android:background="#e0e0e0"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_approveto"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:visibility="gone"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_approveto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_approveto"
                    android:visibility="gone"
                    android:textColor="@color/c_gray_text"
                    android:theme="@style/TextViewaudit_details"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:visibility="gone"
                    android:background="#e0e0e0"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_ccemail"
                    android:visibility="gone"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_ccemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_ccemail"
                    android:visibility="gone"
                    android:textColor="@color/c_gray_text"
                    android:theme="@style/TextViewaudit_details"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:visibility="gone"
                    android:background="#e0e0e0"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_attachment"
                    android:visibility="gone"
                    android:textColor="@color/c_gray_text"
                    android:padding="@dimen/d_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/nunitosans_bold"
                    />
                <TextView
                    android:id="@+id/tv_attachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_attachment"
                    android:visibility="gone"
                    android:textColor="@color/c_dark_gray"
                    android:theme="@style/TextViewaudit_details"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:background="#e0e0e0"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include
        android:layout_width="@dimen/d_progressbar"
        android:layout_height="@dimen/d_progressbar"
        android:layout_centerInParent="true"
        android:visibility="visible"
        layout="@layout/spunk_view"
        />

</RelativeLayout>