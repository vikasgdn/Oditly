<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="204dp"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:id="@+id/ll_audit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_audit"
            android:layout_width="@dimen/d_70dp"
            android:layout_height="@dimen/d_70dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_audit_create"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_semibold"
            android:gravity="center"
            android:padding="@dimen/d_8dp"
            android:text="@string/text_audit"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_16"
            android:visibility="visible" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_action"
            android:layout_width="@dimen/d_70dp"
            android:layout_height="@dimen/d_70dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_action_create"
             />
        <TextView
            android:id="@+id/tv_reset_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_semibold"
            android:gravity="center"
            android:padding="@dimen/d_8dp"
            android:text="@string/text_action"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_16"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>