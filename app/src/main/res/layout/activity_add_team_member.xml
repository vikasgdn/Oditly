<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    >
    <include
        android:id="@+id/header"
        layout="@layout/include_header_text"/>
    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginLeft="@dimen/d_10dp"
        android:layout_marginRight="@dimen/d_10dp"
        android:background="@color/c_white"
        android:layout_above="@+id/cb_select_all"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_audit_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_description"
            android:weightSum="10"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textColor="@color/c_gray_text"
                android:drawableLeft="@mipmap/iv_search_36"
                android:drawablePadding="@dimen/d_5dp"
                android:padding="@dimen/d_8dp"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:background="@drawable/graydark_border_whitebg"
                android:textSize="17sp"
                android:hint="@string/text_name_emaili_roll"/>

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d_5dp"
                android:src="@drawable/ic_find"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_8dp"
            android:layout_marginBottom="@dimen/d_8dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_16"
                android:fontFamily="@font/nunitosans_semibold"
                android:text="@string/text_all"
                android:buttonTint="@color/c_blue"
                android:padding="@dimen/d_5dp"
                android:textColor="@color/c_gray_text"
                android:layout_above="@+id/btn_invite"
                android:checked="false"/>
            <TextView
                android:id="@+id/tv_reset_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/nunitosans_regular"
                android:gravity="right"
                android:padding="@dimen/d_8dp"
                android:background="@drawable/tv_shape_blue_border"
                android:text="@string/textx_reset_seletion"
                android:textColor="@color/c_blue"
                android:textSize="@dimen/text_size_14"
                android:visibility="visible" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_teamlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_4dp"
            android:layout_marginBottom="@dimen/d_30dp"
            android:fadeScrollbars="true"
            tools:listitem="@layout/adapter_addteam"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_nodatafound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_devider"
        android:visibility="gone"
        android:background="@mipmap/no_data_found"
        >
        <TextView
            android:id="@+id/tv_nodatafound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/nunitosans_regular"
            android:gravity="center"
            android:padding="@dimen/d_8dp"
            android:text="@string/s_no_action_found"
            android:textColor="@color/c_red"
            android:textSize="@dimen/text_size_18"
            android:visibility="visible" />
    </RelativeLayout>
    <include
        android:layout_width="@dimen/d_progressbar"
        android:layout_height="@dimen/d_progressbar"
        android:layout_centerInParent="true"
        layout="@layout/spunk_view"
        />


    <Button
        android:id="@+id/btn_invite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/d_100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="@dimen/d_10dp"
        android:layout_weight="1"
        android:background="@drawable/button_border_blue"
        android:minHeight="@dimen/search_btn_height"
        android:text="@string/text_add"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

</RelativeLayout>