<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_appname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_comment"
            android:gravity="left"
            android:layout_marginLeft="@dimen/d_20dp"
            android:layout_marginRight="@dimen/d_20dp"
            android:layout_marginTop="@dimen/d_40dp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="@color/c_gray"
            android:textSize="@dimen/text_size_22"/>


        <TextView
            android:id="@+id/tv_comment_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_comment_error"
            android:gravity="left"
            android:visibility="invisible"
            android:layout_marginLeft="@dimen/d_20dp"
            android:layout_marginRight="@dimen/d_20dp"
            android:layout_marginTop="@dimen/d_5dp"
            android:layout_marginBottom="@dimen/d_2dp"
            android:fontFamily="@font/nunitosans_regular"
            android:textColor="@color/c_red"
            android:textSize="@dimen/text_size_12"/>

        <EditText
            android:id="@+id/et_commentbox"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="@dimen/d_20dp"
            android:layout_marginRight="@dimen/d_20dp"
            android:padding="10dp"
            android:fontFamily="@font/nunitosans_regular"
            android:hint="@string/text_enter_commentaction"
            android:background="@drawable/gray_border_whitebg"
            android:inputType="text|textMultiLine"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/c_gray_text"
            android:gravity="top"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_imagelist"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/d_20dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="160dp"/>
        <ImageView
            android:id="@+id/fb_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/d_20dp"
            android:src="@mipmap/ic_add_80"
            />
        <TextView
            android:id="@+id/tv_media"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_40dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:drawableLeft="@mipmap/ic_camera"
            android:drawablePadding="@dimen/d_10dp"
            android:layout_gravity="right"
            android:visibility="gone"
            android:fontFamily="@font/nunitosans_regular"
            android:padding="@dimen/d_5dp"
            android:layout_marginEnd="@dimen/d_20dp"
            android:text="@string/text_media"
            android:textColor="@color/c_gray_text"
            android:textSize="12sp" />



        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border_blue"
            android:textColor="@color/c_white"
            android:layout_below="@id/et_commentbox"
            android:fontFamily="@font/nunitosans_semibold"
            android:layout_marginTop="50dp"
            android:layout_marginRight="@dimen/d_20dp"
            android:layout_marginLeft="@dimen/d_20dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_20"
            android:text="@string/text_submit"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="@dimen/d_50dp"
        android:layout_height="@dimen/d_50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="138dp"
        android:layout_marginRight="@dimen/d_10dp"
        android:backgroundTint="@color/c_blue"
        android:src="@drawable/ic_camera"
        app:fabSize="mini"
        />

    <include
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        layout="@layout/spunk_view"
        />
</RelativeLayout>