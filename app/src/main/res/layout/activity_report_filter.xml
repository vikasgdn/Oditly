<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    >
    <include
        android:id="@+id/header"
        layout="@layout/include_header_text"/>
    <ScrollView
        android:id="@+id/sv_scroll"
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:layout_above="@id/ll_bottom"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_10dp"
        android:layout_marginRight="@dimen/d_10dp"
        android:background="@color/c_white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_selet_filter"
            android:gravity="left"
            android:padding="@dimen/d_2dp"
            android:visibility="gone"
            android:fontFamily="@font/nunitosans_semibold"
            android:textColor="@color/c_blue"
            android:textSize="@dimen/text_size_18"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_date_range"
            android:gravity="left"
            android:layout_marginTop="@dimen/d_30dp"
            android:padding="@dimen/d_2dp"
            android:fontFamily="@font/nunitosans_semibold"
            android:textColor="@color/c_gray_text"
            android:textSize="@dimen/text_size_18"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_date_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_date_from"
                android:drawablePadding="@dimen/d_5dp"
                android:drawableLeft="@drawable/ic_date"
                android:background="@drawable/change_password_border"
                android:gravity="left"
                android:padding="@dimen/d_5dp"
                android:layout_marginRight="@dimen/d_2dp"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_gray_text"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/tv_date_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/d_5dp"
                android:drawableLeft="@drawable/ic_date"
                android:background="@drawable/change_password_border"
                android:text="@string/text_date_to"
                android:gravity="left"
                android:layout_marginLeft="@dimen/d_2dp"
                android:padding="@dimen/d_5dp"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_gray_text"
                android:textSize="@dimen/text_size_16"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_worst_audit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_top_five_audit"
            android:gravity="left"
            android:padding="@dimen/d_2dp"
            android:visibility="gone"
            android:fontFamily="@font/nunitosans_semibold"
            android:layout_marginTop="@dimen/d_10dp"
            android:textColor="@color/c_gray_text"
            android:textSize="@dimen/text_size_20"/>
        <EditText
            android:id="@+id/et_worst_audit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/c_gray_text"
            android:padding="@dimen/d_10dp"
            android:layout_marginTop="@dimen/d_10dp"
            android:visibility="gone"
            android:fontFamily="@font/nunitosans_regular"
            android:drawableRight="@drawable/ic_drop_down_blue"
            android:drawablePadding="@dimen/d_5dp"
            android:background="@drawable/change_password_border"
            android:textSize="14sp"
            android:text="@string/text_all"/>
        <TextView
            android:id="@+id/tv_audit_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_audit_type"
            android:gravity="left"
            android:padding="@dimen/d_2dp"
            android:fontFamily="@font/nunitosans_semibold"
            android:layout_marginTop="@dimen/d_25dp"
            android:textColor="@color/c_gray_text"
            android:textSize="@dimen/text_size_18"/>
        <EditText
            android:id="@+id/et_audit_type"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/c_gray_text"
            android:padding="@dimen/d_10dp"
            android:layout_marginTop="@dimen/d_10dp"
            android:fontFamily="@font/nunitosans_regular"
            android:drawableRight="@drawable/ic_dropdown_gray"
            android:drawablePadding="@dimen/d_5dp"
            android:focusable="false"
            android:background="@drawable/change_password_border"
            android:textSize="14sp"
            android:text="@string/text_all"/>


        <TextView
            android:id="@+id/tv_auditor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_username"
            android:gravity="left"
            android:padding="@dimen/d_2dp"
            android:fontFamily="@font/nunitosans_semibold"
            android:layout_marginTop="@dimen/d_15dp"
            android:textColor="@color/c_gray_text"
            android:textSize="@dimen/text_size_18"/>
        <EditText
            android:id="@+id/et_auditor_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/c_gray_text"
            android:padding="@dimen/d_10dp"
            android:layout_marginTop="@dimen/d_10dp"
            android:focusable="false"
            android:fontFamily="@font/nunitosans_regular"
            android:drawableRight="@drawable/ic_dropdown_gray"
            android:drawablePadding="@dimen/d_5dp"
            android:background="@drawable/change_password_border"
            android:textSize="14sp"
            android:text="@string/text_all"/>
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_location"
            android:gravity="left"
            android:padding="@dimen/d_2dp"
            android:fontFamily="@font/nunitosans_semibold"
            android:layout_marginTop="@dimen/d_15dp"
            android:textColor="@color/c_gray_text"
            android:textSize="@dimen/text_size_18"/>
        <EditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/c_gray_text"
            android:padding="@dimen/d_10dp"
            android:layout_marginTop="@dimen/d_10dp"
            android:fontFamily="@font/nunitosans_regular"
            android:drawableRight="@drawable/ic_dropdown_gray"
            android:drawablePadding="@dimen/d_5dp"
            android:focusable="false"
            android:background="@drawable/change_password_border"
            android:textSize="14sp"
            android:text="@string/text_all"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_template"
            android:gravity="left"
            android:padding="@dimen/d_2dp"
            android:fontFamily="@font/nunitosans_semibold"
            android:layout_marginTop="@dimen/d_15dp"
            android:textColor="@color/c_gray_text"
            android:textSize="@dimen/text_size_18"/>
        <EditText
            android:id="@+id/et_template"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/c_gray_text"
            android:padding="@dimen/d_10dp"
            android:layout_marginTop="@dimen/d_10dp"
            android:fontFamily="@font/nunitosans_regular"
            android:drawableRight="@drawable/ic_dropdown_gray"
            android:drawablePadding="@dimen/d_5dp"
            android:focusable="false"
            android:background="@drawable/change_password_border"
            android:textSize="14sp"
            android:text="@string/text_all"/>

        <TextView
            android:id="@+id/tv_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_designation"
            android:gravity="left"
            android:visibility="visible"
            android:padding="@dimen/d_2dp"
            android:fontFamily="@font/nunitosans_semibold"
            android:layout_marginTop="@dimen/d_10dp"
            android:textColor="@color/c_gray_text"
            android:textSize="@dimen/text_size_20"/>
        <EditText
            android:id="@+id/et_designation"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/c_gray_text"
            android:padding="@dimen/d_10dp"
             android:visibility="visible"
            android:layout_marginTop="@dimen/d_10dp"
            android:fontFamily="@font/nunitosans_regular"
            android:drawableRight="@drawable/ic_dropdown_gray"
            android:drawablePadding="@dimen/d_5dp"
            android:focusable="false"
            android:background="@drawable/change_password_border"
            android:textSize="14sp"
            android:text="@string/text_all"/>

    </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textx_reset_seletion"
            android:layout_margin="@dimen/d_10dp"
            android:gravity="center"
            android:fontFamily="@font/nunitosans_regular"
            android:background="@drawable/tv_shape_blue_border"
            android:padding="@dimen/d_8dp"
            android:textColor="@color/text_selector"
            android:textSize="@dimen/text_size_14"/>


        <TextView
            android:id="@+id/tv_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_done"
            android:gravity="center"
            android:layout_margin="@dimen/d_10dp"
            android:background="@drawable/button_border_blue"
            android:fontFamily="@font/nunitosans_regular"
            android:padding="@dimen/d_8dp"
            android:textColor="@color/c_white"
            android:textSize="@dimen/text_size_14"/>

    </LinearLayout>

    <include
        android:layout_width="@dimen/d_progressbar"
        android:layout_height="@dimen/d_progressbar"
        android:layout_centerInParent="true"
        layout="@layout/spunk_view"
        />

</RelativeLayout>