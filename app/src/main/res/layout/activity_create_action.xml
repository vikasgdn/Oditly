<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    >
    <include
        android:id="@+id/header"
        layout="@layout/include_header_text"/>

    <ScrollView
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/d_10dp">
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans_semibold"
                android:text="@string/text_location"
                android:drawableRight="@drawable/ic_star12"
                android:textColor="@color/c_dark_gray"
                android:textSize="@dimen/text_size_16" />
            <RelativeLayout
                android:id="@+id/rl_location"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/gray_border_whitebg"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                >
                <Spinner
                    android:id="@+id/spn_locationtype"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawSelectorOnTop="true"
                    android:popupBackground="@color/colorWhite"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:background="@drawable/ic_dropdown_gray"
                    android:padding="10dp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans_semibold"
                android:drawableRight="@drawable/ic_star12"
                android:text="@string/text_department"
                android:layout_marginTop="@dimen/d_20dp"
                android:textColor="@color/c_dark_gray"
                android:textSize="@dimen/text_size_16" />

            <RelativeLayout
                android:id="@+id/rl_section"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/gray_border_whitebg"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                >
                <Spinner
                    android:id="@+id/spn_section"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawSelectorOnTop="true"
                    android:background="@null"
                    android:popupBackground="@color/colorWhite"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:background="@drawable/ic_dropdown_gray"
                    android:padding="10dp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans_semibold"
                android:drawableRight="@drawable/ic_star12"
                android:text="@string/text_action_title"
                android:layout_marginTop="@dimen/d_20dp"
                android:textColor="@color/c_dark_gray"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/c_gray_text"
                android:textSize="@dimen/text_size_16"
                android:layout_marginTop="@dimen/d_10dp"
                android:padding="@dimen/d_10dp"
                android:hint="Nature of Complaint"
                android:background="@drawable/gray_border_whitebg"/>
            <TextView
                android:id="@+id/tv_titleerror"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s_entertitle"
                android:gravity="left"
                android:visibility="gone"
                android:padding="@dimen/d_2dp"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_red"
                android:textSize="@dimen/text_size_14"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d_2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitosans_semibold"
                        android:drawableRight="@drawable/ic_star12"
                        android:text="@string/text_priority"
                        android:textColor="@color/c_dark_gray"
                        android:textSize="@dimen/text_size_16" />

                    <RelativeLayout
                        android:id="@+id/rl_priority"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/gray_border_whitebg"
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        >
                        <Spinner
                            android:id="@+id/spn_priority"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawSelectorOnTop="true"
                            android:background="@null"
                            android:popupBackground="@color/colorWhite"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:background="@drawable/ic_dropdown_gray"
                            android:padding="10dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/d_2dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitosans_semibold"
                        android:text="@string/text_mediacount"
                        android:visibility="visible"
                        android:singleLine="true"
                        android:textColor="@color/c_dark_gray"
                        android:textSize="@dimen/text_size_16" />

                    <EditText
                        android:id="@+id/et_media_count"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:padding="10dp"
                        android:layout_marginTop="@dimen/d_10dp"
                        android:fontFamily="@font/nunitosans_regular"
                        android:hint="@string/text_entercount"
                        android:background="@drawable/gray_border_whitebg"
                        android:inputType="number"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/c_gray_text"
                        android:gravity="left"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans_semibold"
                android:text="@string/text_duedate"
                android:drawableRight="@drawable/ic_star12"
                android:layout_marginTop="@dimen/d_20dp"
                android:textColor="@color/c_dark_gray"
                android:textSize="@dimen/text_size_16" />
            <TextView
                android:id="@+id/tv_duedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_select_date"
                android:drawablePadding="@dimen/d_5dp"
                android:drawableLeft="@drawable/ic_date"
                android:background="@drawable/gray_border_whitebg"
                android:padding="@dimen/d_10dp"
                android:layout_marginTop="@dimen/d_10dp"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_gray_text"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/tv_plandateerror"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s_enterplandate"
                android:gravity="left"
                android:visibility="gone"
                android:padding="@dimen/d_2dp"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_red"
                android:textSize="@dimen/text_size_14"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans_semibold"
                android:text="@string/text_correctiveaction"
                android:visibility="visible"
                android:layout_marginTop="@dimen/d_20dp"
                android:textColor="@color/c_dark_gray"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_correctiveaction"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="10dp"
                android:layout_marginTop="@dimen/d_5dp"
                android:visibility="visible"
                android:background="@drawable/gray_border_whitebg"
                android:inputType="text|textMultiLine"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/c_gray_text"
                android:gravity="top"/>
            <TextView
                android:id="@+id/tv_correctiveactioerror"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s_enterdetails"
                android:gravity="left"
                android:visibility="gone"
                android:padding="@dimen/d_2dp"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_red"
                android:textSize="@dimen/text_size_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans_semibold"
                android:text="@string/text_assignee"
                android:layout_marginTop="@dimen/d_20dp"
                android:drawableRight="@drawable/ic_star12"
                android:textColor="@color/c_dark_gray"
                android:textSize="@dimen/text_size_16" />
            <EditText
                android:id="@+id/et_assignee"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/c_gray_text"
                android:paddingTop="@dimen/d_10dp"
                android:paddingBottom="@dimen/d_10dp"
                android:paddingLeft="@dimen/d_10dp"
                android:layout_marginTop="@dimen/d_10dp"
                android:focusable="false"
                android:fontFamily="@font/nunitosans_semibold"
                android:drawableRight="@drawable/ic_dropdown_gray"
                android:background="@drawable/gray_border_whitebg"
                android:textSize="14sp"
                android:text="@string/text_all"/>
            <TextView
                android:id="@+id/tv_assigneeerror"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s_enterAssignee"
                android:gravity="left"
                android:visibility="gone"
                android:padding="@dimen/d_2dp"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/c_red"
                android:textSize="@dimen/text_size_14"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_imagelist"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/d_10dp"
                android:layout_marginBottom="@dimen/d_10dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_height="140dp"/>

            <Button
                android:id="@+id/btn_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_create"
                android:textSize="@dimen/text_size_18"
                android:padding="@dimen/d_10dp"
                android:layout_below="@+id/ll_container"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/d_100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="@dimen/d_50dp"
                android:layout_marginBottom="@dimen/d_10dp"
                android:textAllCaps="false"
                android:background="@drawable/button_border_blue"
                android:minHeight="@dimen/search_btn_height"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_15dp"/>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/fb_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/d_20dp"
        android:layout_marginBottom="50dp"
        android:src="@mipmap/ic_add_80"
        />

    <include
        layout="@layout/spunk_view"
        android:layout_width="@dimen/d_progressbar"
        android:layout_height="@dimen/d_progressbar"
        android:layout_centerInParent="true"
        />


</RelativeLayout>