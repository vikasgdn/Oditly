<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/include_header"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/d_20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_appname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_schedule_demo"
            android:gravity="left"
            android:visibility="gone"
            android:padding="@dimen/d_2dp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="@color/c_gray"
            android:textSize="@dimen/text_size_22"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintTextColor="@color/c_blue"
            android:visibility="visible"
            android:layout_marginTop="@dimen/d_20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_fisrtname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextTheme"
                android:paddingTop="@dimen/d_10dp"
                android:inputType="text"
                android:paddingBottom="@dimen/d_10dp"
                android:hint="@string/text_firstname" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_firstnameerror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_entervallidname"
            android:visibility="gone"
            android:gravity="left"
            android:layout_marginTop="-5dp"
            android:padding="@dimen/d_2dp"
            android:fontFamily="@font/nunitosans_regular"
            android:textColor="@color/c_red"
            android:textSize="@dimen/text_size_14"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintTextColor="@color/c_blue"
            android:visibility="visible"
            android:layout_marginTop="@dimen/d_20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextTheme"
                android:paddingTop="@dimen/d_10dp"
                android:inputType="text"
                android:paddingBottom="@dimen/d_10dp"
                android:hint="@string/text_lastname" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_lastnameerror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_entervallidemail"
            android:visibility="gone"
            android:gravity="left"
            android:layout_marginTop="-5dp"
            android:padding="@dimen/d_2dp"
            android:fontFamily="@font/nunitosans_regular"
            android:textColor="@color/c_red"
            android:textSize="@dimen/text_size_14"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintTextColor="@color/c_blue"
            android:visibility="visible"
            android:layout_marginTop="@dimen/d_20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextTheme"
                android:paddingTop="@dimen/d_10dp"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/d_10dp"
                android:hint="@string/text_company" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_companyerror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_entervallidemail"
            android:visibility="gone"
            android:gravity="left"
            android:layout_marginTop="-5dp"
            android:padding="@dimen/d_2dp"
            android:fontFamily="@font/nunitosans_regular"
            android:textColor="@color/c_red"
            android:textSize="@dimen/text_size_14"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintTextColor="@color/c_blue"
            android:visibility="visible"
            android:layout_marginTop="@dimen/d_20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextTheme"
                android:paddingTop="@dimen/d_10dp"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/d_10dp"
                android:hint="@string/h_email" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_emailerror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_entervallidemail"
            android:visibility="gone"
            android:gravity="left"
            android:layout_marginTop="-5dp"
            android:padding="@dimen/d_2dp"
            android:fontFamily="@font/nunitosans_regular"
            android:textColor="@color/c_red"
            android:textSize="@dimen/text_size_14"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintTextColor="@color/c_blue"
            android:visibility="visible"
            android:layout_marginTop="@dimen/d_20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextTheme"
                android:paddingTop="@dimen/d_10dp"
                android:inputType="number"
                android:paddingBottom="@dimen/d_10dp"
                android:hint="@string/text_phone" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_phoneerror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_entervallidphone"
            android:visibility="gone"
            android:gravity="left"
            android:layout_marginTop="-5dp"
            android:padding="@dimen/d_2dp"
            android:fontFamily="@font/nunitosans_regular"
            android:textColor="@color/c_red"
            android:textSize="@dimen/text_size_14"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintTextColor="@color/c_blue"
            android:visibility="visible"
            android:layout_marginTop="@dimen/d_20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextTheme"
                android:paddingTop="@dimen/d_10dp"
                android:inputType="text"
                android:focusable="false"
                android:paddingBottom="@dimen/d_10dp"
                android:hint="@string/text_date" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_dateerror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_entervalliddate"
            android:visibility="gone"
            android:gravity="left"
            android:layout_marginTop="-5dp"
            android:padding="@dimen/d_2dp"
            android:fontFamily="@font/nunitosans_regular"
            android:textColor="@color/c_red"
            android:textSize="@dimen/text_size_14"/>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border_blue"
            android:textColor="@color/c_white"
            android:fontFamily="@font/nunitosans_semibold"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_20"
            android:text="@string/text_schedule_demo"/>

    </LinearLayout>

    <include
        android:layout_width="@dimen/d_progressbar"
        android:layout_height="@dimen/d_progressbar"
        android:layout_centerInParent="true"
        layout="@layout/spunk_view"
        />


</RelativeLayout>