<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:keepScreenOn="true"
    >
    <include
        android:id="@+id/header"
        layout="@layout/include_header_text"/>

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:orientation="vertical"
        android:layout_margin="@dimen/d_10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_semibold"
            android:text="@string/text_location"
            android:drawableRight="@drawable/ic_star12"
            android:textColor="@color/c_dark_gray"
            android:textSize="@dimen/text_size_16" />
        <RelativeLayout
            android:id="@+id/rl_location"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gray_border_whitebg"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            >
            <Spinner
                android:id="@+id/spn_locationtype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawSelectorOnTop="true"
                android:popupBackground="@color/colorWhite"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:background="@drawable/ic_dropdown_gray"
                android:padding="10dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_semibold"
            android:text="@string/text_audit_type"
            android:drawableRight="@drawable/ic_star12"
            android:layout_marginTop="@dimen/d_20dp"
            android:textColor="@color/c_dark_gray"
            android:textSize="@dimen/text_size_16" />
        <RelativeLayout
            android:id="@+id/rl_staytple"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gray_border_whitebg"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            >

            <Spinner
                android:id="@+id/spn_audittype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawSelectorOnTop="true"
                android:popupBackground="@color/colorWhite" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:background="@drawable/ic_dropdown_gray"
                android:padding="10dp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_semibold"
            android:text="@string/text_template"
            android:drawableRight="@drawable/ic_star12"
            android:layout_marginTop="@dimen/d_20dp"
            android:textColor="@color/c_dark_gray"
            android:textSize="@dimen/text_size_16" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gray_border_whitebg"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            >
            <Spinner
                android:id="@+id/spn_template"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawSelectorOnTop="true"
                android:background="@null"
                android:popupBackground="@color/colorWhite"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:background="@drawable/ic_dropdown_gray"
                android:padding="10dp"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_semibold"
            android:text="@string/text_assignee"
            android:layout_marginTop="@dimen/d_20dp"
            android:drawableRight="@drawable/ic_star12"
            android:textColor="@color/c_dark_gray"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/et_auditor_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/c_gray_text"
            android:paddingTop="@dimen/d_10dp"
            android:paddingBottom="@dimen/d_10dp"
            android:paddingLeft="@dimen/d_10dp"
            android:layout_marginTop="@dimen/d_10dp"
            android:focusable="false"
            android:fontFamily="@font/nunitosans_semibold"
            android:drawableRight="@drawable/ic_dropdown_gray"
            android:background="@drawable/graydark_border_whitebg"
            android:textSize="14sp"
            android:text="@string/text_all"/>

        <TextView
            android:id="@+id/tv_moreoptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_semibold"
            android:text="@string/text_more_option"
            android:drawableLeft="@drawable/ic_drop_down_blue"
            android:layout_marginTop="@dimen/d_20dp"
            android:gravity="center_vertical"
            android:textColor="@color/c_blue"
            android:textSize="@dimen/text_size_18" />

    </LinearLayout>
    <Button
        android:id="@+id/btn_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_create"
        android:textSize="@dimen/text_size_18"
        android:padding="@dimen/d_10dp"
        android:layout_below="@+id/ll_container"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="@dimen/d_100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="@dimen/d_50dp"
        android:layout_marginBottom="@dimen/d_10dp"
        android:textAllCaps="false"
        android:background="@drawable/button_border_blue"
        android:minHeight="@dimen/search_btn_height"/>


    <include
        layout="@layout/spunk_view"
        android:layout_width="@dimen/d_progressbar"
        android:layout_height="@dimen/d_progressbar"
        android:layout_centerInParent="true"
        />


</RelativeLayout>