<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    >
<ScrollView
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/d_10dp"
            android:background="@color/c_white">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:src="@drawable/ic_arrow" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/nunitosans_semibold"
                android:gravity="center"
                android:text="@string/s_account"
                android:textColor="@color/c_blue"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/d_10dp"
                android:visibility="invisible"
                android:src="@drawable/ic_notifications" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_10dp"
            android:layout_marginLeft="@dimen/d_10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_30dp"
                android:visibility="gone"
                android:contentDescription="@string/nav_header_desc"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tv_name_letter"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_30dp"
                android:background="@drawable/circle_drawable_blue"
                android:textSize="36sp"
                android:text="JS"
                android:gravity="center"
                android:textColor="@color/c_white"
                android:fontFamily="@font/nunitosans_bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_weight="8"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jasmeet Singh"
                    android:padding="@dimen/d_5dp"
                    android:gravity="left"
                    android:fontFamily="@font/nunitosans_regular"
                    android:textColor="@color/c_dark_gray"
                    android:textSize="@dimen/text_size_18"
                    />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_header_subtitle"
                    android:padding="@dimen/d_5dp"
                    android:gravity="left"
                    android:fontFamily="@font/nunitosans_regular"
                    android:textColor="@color/c_gray"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_devider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/size_2dp"
            android:layout_below="@+id/ll_parent"
            android:background="#e0e0e0"/>
        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_setting"
            android:textColor="@color/c_dark_gray"
            android:paddingTop="@dimen/d_15dp"
            android:paddingBottom="@dimen/d_15dp"
            android:paddingLeft="@dimen/d_10dp"
            android:layout_marginLeft="@dimen/d_5dp"
            android:drawableLeft="@mipmap/ic_setting"
            android:drawablePadding="@dimen/d_10dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/nunitosans_bold"
            />
        <TextView
            android:id="@+id/tv_changepass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_change_pass"
            android:drawableLeft="@mipmap/ic_changepass"
            android:drawablePadding="@dimen/d_10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d_5dp"
            android:textColor="@color/c_dark_gray"
            android:theme="@style/TextViewAccount"
            />
        <TextView
            android:id="@+id/tv_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c_dark_gray"
            android:drawableLeft="@mipmap/ic_lang"
            android:layout_marginLeft="@dimen/d_5dp"
            android:drawablePadding="@dimen/d_10dp"
            android:gravity="center_vertical"
            android:text="@string/s_language"
            android:theme="@style/TextViewAccount"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/d_10dp"
            android:background="#e0e0e0"/>
        <TextView
            android:id="@+id/tv_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c_dark_gray"
            android:drawableLeft="@mipmap/ic_supoort"
            android:drawablePadding="@dimen/d_10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d_5dp"
            android:text="@string/text_chatwithus"
            android:visibility="visible"
            android:theme="@style/TextViewAccount"
            />
        <TextView
            android:id="@+id/tv_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_privacy"
            android:drawablePadding="@dimen/d_10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d_5dp"
            android:text="@string/s_privacy_policy"
            android:textColor="@color/c_dark_gray"
            android:theme="@style/TextViewAccount"
            />
        <TextView
            android:id="@+id/tv_termservice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c_dark_gray"
            android:drawableLeft="@mipmap/ic_term"
            android:layout_marginLeft="@dimen/d_5dp"
            android:drawablePadding="@dimen/d_10dp"
            android:gravity="center_vertical"
            android:text="@string/s_term"
            android:theme="@style/TextViewAccount"
            />
        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c_dark_gray"
            android:drawableLeft="@drawable/ic_feedback"
            android:drawablePadding="@dimen/d_10dp"
            android:layout_marginLeft="@dimen/d_5dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:text="@string/text_feedback"
            android:theme="@style/TextViewAccount"
            />

        <TextView
            android:id="@+id/tv_upcomingfeature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c_dark_gray"
            android:drawableLeft="@mipmap/ic_lang"
            android:drawablePadding="@dimen/d_10dp"
            android:layout_marginLeft="@dimen/d_5dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:text="@string/text_upcominfeature"
            android:theme="@style/TextViewAccount"
            />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c_dark_gray"
            android:drawableLeft="@mipmap/ic_version"
            android:drawablePadding="@dimen/d_10dp"
            android:layout_marginLeft="@dimen/d_5dp"
            android:gravity="center_vertical"
            android:text="@string/s_version"
            android:theme="@style/TextViewAccount"
            />


    </LinearLayout>
</ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/ll_logout"
        android:background="#e0e0e0"/>
    <RelativeLayout
        android:id="@+id/ll_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_logout"/>
        <TextView
            android:id="@+id/tv_signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_logout"
            android:text="@string/s_signout"
            android:layout_marginLeft="@dimen/d_5dp"
            android:textColor="@color/c_blue"
            android:paddingTop="@dimen/d_20dp"
            android:paddingBottom="@dimen/d_20dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/nunitosans_bold"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_chatwithus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/d_20dp"
        android:layout_marginBottom="@dimen/d_90dp"
        android:drawableTop="@mipmap/ic_supoort"
        android:drawablePadding="@dimen/d_5dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:text="@string/text_chatwithus"
        android:textColor="@color/c_dark_gray"
        android:theme="@style/TextViewAccount" />
    <include
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        layout="@layout/spunk_view"
        />

</RelativeLayout>