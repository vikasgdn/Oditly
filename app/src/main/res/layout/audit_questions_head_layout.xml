<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/d_5dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="3">

        <View
            android:layout_width="@dimen/d_1dp"
            android:layout_height="match_parent"
            android:background="@color/c_light_gray" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_brand"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_margin="@dimen/d_5dp"
            android:textColor="@color/c_dark_gray"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/nunitosans_semibold"
            />

        <View
            android:layout_width="@dimen/d_1dp"
            android:layout_height="match_parent"
            android:background="@color/c_light_gray" />

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Audit Name"
            android:layout_margin="@dimen/d_5dp"
            android:layout_weight="2"
            android:textColor="@color/c_dark_gray"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/nunitosans_regular"/>

        <View
            android:layout_width="@dimen/d_1dp"
            android:layout_height="match_parent"
            android:background="@color/c_light_gray" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="3">

        <View
            android:layout_width="@dimen/d_1dp"
            android:layout_height="match_parent"
            android:background="@color/c_light_gray" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_location"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_margin="@dimen/d_5dp"
            android:textColor="@color/c_dark_gray"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/nunitosans_semibold"/>

        <View
            android:layout_width="@dimen/d_1dp"
            android:layout_height="match_parent"
            android:background="@color/c_light_gray" />

        <TextView
            android:id="@+id/tv_location_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Audit Name"
            android:layout_weight="2"
            android:layout_margin="@dimen/d_5dp"
            android:textColor="@color/c_dark_gray"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/nunitosans_regular"/>

        <View
            android:layout_width="@dimen/d_1dp"
            android:layout_height="match_parent"
            android:background="@color/c_light_gray" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_light_gray" />

    <LinearLayout
        android:id="@+id/ll_auditname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:gravity="center_vertical">

        <View
            android:layout_width="@dimen/d_1dp"
            android:layout_height="match_parent"
            android:background="@color/c_light_gray" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_audit_name"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_margin="@dimen/d_5dp"
            android:textColor="@color/c_dark_gray"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/nunitosans_semibold"/>

        <View
            android:layout_width="@dimen/d_1dp"
            android:layout_height="match_parent"
            android:background="@color/c_light_gray" />

        <TextView
            android:id="@+id/tv_audit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Audit Name"
            android:layout_weight="2"
            android:layout_margin="@dimen/d_5dp"
            android:textColor="@color/c_dark_gray"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/nunitosans_regular"/>

        <View
            android:layout_width="@dimen/d_1dp"
            android:layout_height="match_parent"
            android:background="@color/c_light_gray" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_light_gray" />

</LinearLayout>

